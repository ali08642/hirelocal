rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only access their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Business data - read-only for authenticated users
    match /businesses/{businessId} {
      allow read: if request.auth != null;
      allow write: if false; // Only backend can write business data
    }
    
    // Categories - read-only for authenticated users
    match /categories/{categoryId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admin can manage categories
    }
    
    // Activity logs - users can only read/write their own logs
    match /activityLogs/{logId} {
      allow read, write: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         request.data.userId == request.auth.uid);
    }
    
    // Search queries - users can only access their own
    match /searchQueries/{queryId} {
      allow read, write: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         request.data.userId == request.auth.uid);
    }
    
    // Saved businesses - users can only manage their own saves
    match /savedBusinesses/{saveId} {
      allow read, write: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         request.data.userId == request.auth.uid);
    }
    
    // Admin-only collections (if needed)
    match /admin/{document=**} {
      allow read, write: if false; // Only server-side can access
    }
  }
}